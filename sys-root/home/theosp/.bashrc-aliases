alias vi="vim"
alias rdesktop="rdesktop -g 1024x768"

# <mplayer_shortcuts>
    alias ma='mplayer *'
# </mplayer_shortcuts>

# <ls_shortcuts>
    alias l='ls'
    alias lsl='ls -l'
# </ls_shortcuts>

# <git_shortcuts>
    g () {
        cat <<EOF
Git Shortcuts:
    glo  - Git pulL Origin
    gho  - Git pusH Origin
    glom - Git pulL Origin Master
    ghom - Git pusH Origin Master
    glo  - Git pulL Origin
    gho  - Git pusH Origin
    gl   - Git pulL
    gh   - Git pusH

    gd   - Git diff
    gD   - Git diff --cached
    gdt  - Git diff yesterday
    gl   - Git log (--pretty=oneline --graph)

    gs   - git status

    gf   - git fetch

    gS   - git stash
    gp   - git stash pop 

    ga   - git add
    gc   - git commit
    gcA  - git commit --amend
    gca  - git commit -a
    gcm  - git commit -m
    gcam - git commit -a -m

    gC   - git cola

    gb   - git branch
    gch  - git checkout
    gchb - git checkout -b
    gcht - git checkout -t
    gchm - git checkout master

    gm   - git merge
    gmm  - git merge master

    gmv  - git mv
EOF
    }
    alias glo='git pull origin' # Git pulL Origin
    alias gho='git push origin' # Git pusH Origin
    alias glom='git pull origin master' # Git pulL Origin Master
    alias ghom='git push origin master' # Git pusH Origin Master
    alias glo='git pull origin' # Git pulL Origin
    alias gho='git push origin' # Git pusH Origin
    alias gl='git pull' # Git pulL
    alias gh='git push' # Git pusH

    alias gd='git diff' # Git diff
    alias gD='git diff --cached' # Git diff --cached
    alias gdt='git diff --since="9 hours"' # Git diff yesterday
    alias gl='git log --pretty=oneline --graph' # Git log (--pretty=oneline --graph)

    alias gs='git status' # git status

    alias gf='git fetch' # git fetch

    alias gS='git stash' # git stash
    alias gp='git stash pop' # git pop 

    alias ga='git add' # git add
    alias gc='git commit' # git commit
    alias gcA='git commit --amend' # git commit --amend
    alias gca='git commit -a' # git commit -a
    alias gcm='git commit -m' # git commit -m
    alias gcam='git commit -a -m' # git commit -a -m

    alias gC='git cola' # git cola

    alias gb='git branch' # git branch
    alias gch='git checkout' # git checkout
    alias gchb='git checkout -b' # git checkout -b
    alias gcht='git checkout -t' # git checkout -t
    alias gchm='git checkout master' # git checkout master

    alias gm='git merge' # git merge
    alias gmm='git merge master' # git merge master

    alias gmv='git mv' # git mv
# <git_shortcuts>

# <ssh_shortcuts>
    # ssh stuffs
    alias sa='ssh-add'

    # ssh keygen
    sk ()
    {
        ssh-keygen -t rsa -C "$1"
    }
# </ssh_shortcuts>
